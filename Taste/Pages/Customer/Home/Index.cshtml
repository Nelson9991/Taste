@page
@model Taste.Pages.Customer.Home.IndexModel
@{
}

@foreach (var category in Model.Categories)
{
    @if (Model.MenuItems.Any(c => c.CategoryId == category.Id))
    {
        <div class="row container pb-3 backgroundWhite">
            <div class="col-12">
                <div class="row">
                    <h2 class="text-info" style="padding-left: 10px">@category.Name</h2>
                    <div class="col-12">
                        <div class="row my-3">
                            @foreach (var menuItem in Model.MenuItems.Where(c => c.CategoryId == category.Id))
                            {
                                <div class="col-lg-3 col-xl-3 col-md-6 pb-4">
                                    <div class="card rounded-3" style="border: 2px solid #212529;">
                                        <div class="pt-1 text-center">
                                            <h3 class="card-title text-secondary">@menuItem.Name</h3>
                                        </div>
                                        <div class="d-flex justify-content-between p-2">
                                            <span class="badge bg-info text-center" style="font-size: 14px; line-height: 1.65 !important;">
                                                @menuItem.Category.Name
                                            </span>
                                            <span class="text-end h4" style="color: maroon">
                                                @menuItem.Price
                                            </span>
                                        </div>
                                        <div class="rounded">
                                            <img src="@menuItem.Image" class="card-img-top p-2 rounded"/>
                                        </div>
                                        <a asp-page="Details" class="btn btn-dark w-100 rounded" asp-route-id="@menuItem.Id">Details</a>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
}
