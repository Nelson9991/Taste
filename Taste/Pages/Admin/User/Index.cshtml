@page
@using Microsoft.AspNetCore.Authorization
@using Utilities
@attribute [Authorize(Roles = Sd.ManagerRole)]
@{
    ViewData["Title"] = "Users";
}

<div class="border backgroundWhite container p-3">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Users List</h2>
        </div>
        <div class="col-2 offset-4 align-self-center">
            <a class="btn btn-primary form-control" asp-area="Identity" asp-page="/Account/Register">
                <i class="fas fa-plus"></i>
                &nbsp;
                Create New
            </a>
        </div>
    </div>

    <div class="mt-4">
        <table id="DT_Load" class="table table-bordered" style="width: 100%">
            <thead class="table-dark">
            <tr>
                <th>Full Name</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th></th>
            </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts {
    <script src="~/js/user.js"></script>
}