@page
@model Taste.Pages.Admin.Category.UpsertModel

@{
    ViewData["Title"] = Model.Category.Id == 0 ? "Create" : "Edit" + "Category";
}

<form method="post">
    <div class="container">
        <div class="row px-2 mx-2 backgroundWhite border">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-12 px-3" style="border-bottom: 1px solid #325d88">
                <h2 class="text-primary">@(Model.Category.Id == 0 ? "Create" : "Edit") Category</h2>
            </div>
            <div class="col-8 pt-3">
                @if (Model.Category.Id != 0)
                {
                    <input type="hidden" asp-for="Category.Id" />
                }
                <div class="mb-3 row">
                    <div class="col-3">
                        <label asp-for="Category.Name"></label>
                    </div>
                    <div class="col-9">
                        <input asp-for="Category.Name" class="form-control" />
                        <span class="text-danger" asp-validation-for="Category.Name"></span>
                    </div>
                </div>
                <div class="mb-3 row">
                    <div class="col-3">
                        <label asp-for="Category.DisplayOrder"></label>
                    </div>
                    <div class="col-9">
                        <input asp-for="Category.DisplayOrder" class="form-control" />
                        <span class="text-danger" asp-validation-for="Category.DisplayOrder"></span>
                    </div>
                </div>
                <div class="mb-3 row">
                    <div class="col-9 offset-3">
                        <div class="row">
                            <div class="col-6">
                                @if (Model.Category.Id != 0)
                                {
                                    <button type="submit" class="btn btn-primary form-control">
                                        Update
                                    </button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-primary form-control">
                                        Create
                                    </button>

                                }
                            </div>
                            <div class="col-6">
                                <a class="btn btn-danger form-control" asp-page="Index">
                                    Back to list
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}